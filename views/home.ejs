<% include ./partials/header %>
<style>
#jumbo{
    margin-top: 50px;
    
}
.container .jumbotron {
    border-radius: 15px ;
}
#form{
    background-color: #e9ecef;
    margin-top :50px;
    width:80%;
    padding: 4%;
    border-radius: 15px;
}
#btn{
    margin-top:20px;
}
.log{
    width:80%;
}

</style>
<link rel="stylesheet" href="../../public/stylesheets/main.css">
<div id="back">
<div class="row">
    <div class="col-md-6">
        <div class="container" id="jumbo">
            <header class="jumbotron">
                <div class="container">
                <h2>Welcome to the Attendance Manager</h2>
                <h6>Best and easy way to keep track of your attendance</h6>
                </div>
            </header>
        </div>
    </div>
    <div class="col-md-6">
        <div class="container" id="form" >
            <h3>Register</h3>
            <p>Please fill in this form to create account</p>
            <hr>
            <form action="/register" method="POST">
                <div class="form-group">
                    <label><strong>Username</strong></label>
                    <input class="form-control log" type="text" name="username" placeholder="UserName" required>
                </div>
                <div class="form-group">
                    <label><strong>Password</strong></label>
                    <input class="form-control log" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary " id="btn">Register</button>
                </div>
            </form>
            <p>Already have an account <a href="/login">Sign in</a></p>
            
    </div>
    </div>
</div>
</div>
</div>
</div>

