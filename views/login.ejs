<% include ./partials/header %>
<style>
  .container {
    width: 30%;
  }
  #form {
    margin-top: 20px;
  }
  #btn {
    margin-top: 25px;
  }
</style>
<div class="container">
  <h2 style="text-align:center">Log In</h2>
  <div id="form">
    <form action="/login" method="POST">
      <div class="form-group">
        <label><strong>Username</strong></label>
        <input
          class="form-control log"
          type="text"
          name="username"
          placeholder="UserName"
          required
        />
      </div>
      <div class="form-group">
        <label><strong>Password</strong></label>
        <input
          class="form-control log"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block" id="btn">Login</button>
      </div>
    </form>
    <% if(showErrors){ %>
    <p id="demo" style="display: none"><%= x %></p>
    <% } %>
    <p id="demo1" style="display: none"><%= errors %></p>
  </div>
</div>
